@model Mag2_Models.ViewModels.ProductUserVM


<form method="post">

    <br />
    <div class="backgroundWhiteBorder">


        <div class="container">
            <div class="card">

                <div class="card-header bg-dark text-light ml-0 row container">

                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                       
                        Order Summary

                    </div>

                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm">  Back to Cart  </a>
                    </div>

                </div>


                <div class="card-body">

                    <div class="container rounded p-2">

                        <div class="row">


                            <div class="col-12 col-lg-7 pb-4">

                                <div class="row">

                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">  User Details:  </span>
                                    </h4>

                                </div>

                                <div class="row my-1">

                                    <div class="col-3">
                                        <label>  Name  </label>
                                    </div>

                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.FullName" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="row my-1">

                                    <div class="col-3">
                                        <label>  Phone  </label>
                                    </div>

                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.PhoneNumber" required type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="row my-1">

                                    <div class="col-3">
                                        <label>  Email  </label>
                                    </div>

                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Email" required type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    </div>

                                </div>

                                @if (User.IsInRole(Mag2_Extensions.WebConst.AdminRole))
                                {
                                    <div class="row my-1">

                                        <div class="col-3">
                                            <label>  Address  </label>
                                        </div>

                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.StreetAddress" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="row my-1">

                                        <div class="col-3">
                                            <label>  City  </label>
                                        </div>

                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.City" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="row my-1">

                                        <div class="col-3">
                                            <label>  State  </label>
                                        </div>

                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.State" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="row my-1">

                                        <div class="col-3">
                                            <label>  Postal code  </label>
                                        </div>

                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.PostalCode" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                                        </div>

                                    </div>
                                }

                            </div>


                            <div class="col-12 col-lg-5 row">

                                <div class="col-12">

                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">  Summary:  </span>
                                    </h4>

                                    <ul class="list-group mb-3">
                                        @{
                                            var orderTotal = 0.0;
                                        }
                                        <!--foreach не подходит??? -->
                                        @for (int i = 0; i < Model.ProductsList.Count(); i++)
                                        {
                                            <!--для доступа name и id каждого товара для передачи при подтверждения заказа-->
                                            <input type="hidden" asp-for="@Model.ProductsList[i].Id" />
                                            <input type="hidden" asp-for="@Model.ProductsList[i].Name" />
                                            <input type="hidden" asp-for="@Model.ProductsList[i].Price" />
                                            <input type="hidden" asp-for="@Model.ProductsList[i].QuantityOfGoods" />

                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ProductsList[i].Name</h6>

                                                    @if (User.IsInRole(Mag2_Extensions.WebConst.AdminRole))
                                                    {
                                                        <small class="text-muted">  quantity: @Model.ProductsList[i].QuantityOfGoods </small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">  @Model.ProductsList[i].Price : &#8381  </small>
                                                    }
                                                </div>
                                                @if (User.IsInRole(Mag2_Extensions.WebConst.AdminRole))
                                                {
                                                    <span class="text-muted"> &#8381 @(Model.ProductsList[i].Price * Model.ProductsList[i].QuantityOfGoods )</span>
                                                }
                                            </li>
                                            orderTotal += Model.ProductsList[i].Price * Model.ProductsList[i].QuantityOfGoods;
                                        }
                                        @if (User.IsInRole(Mag2_Extensions.WebConst.AdminRole))
                                        {
                                            <li class="list-group-item d-flex justify-content-between bg-light">
                                                <small class="text-info"> Total ( &#8381 )  </small>
                                                <strong class="text-info">&#8381 @orderTotal</strong>
                                            </li>
                                        }
                                    </ul>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>


                <div class="card-footer">

                    <div class="row">

                        <div class="col-12 col-md-5 offset-md-7">
                            @if (User.IsInRole(Mag2_Extensions.WebConst.AdminRole))
                            {
                                <button class="btn btn-success form-control" id="submit-button" style="border-radius: 15px 0px">Submit Order</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control" style="border-radius: 0px 15px">  Submit Inquiry  </button>
                            }

                        </div>
                    </div>

                </div>


            </div>
        </div>


    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

