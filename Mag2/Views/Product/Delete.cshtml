
@model Mag2_Models.Product
@using Mag2_Extensions

<form method="post">

    <input asp-for="Id" hidden /><


    <div class="border p-3 bg-white">


        <div class="form-group row">
            <h2 class="text-info pl-3"> Delete Product </h2>
        </div>


        <div class="row">

            <div class="col-8">

                <div class="form-group row py-1">

                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row py-1">

                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row py-1">

                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>

                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea><!--textarea и класс summernote (add редактор)-->
                    </div>

                </div>

                <div class="form-group row py-1">

                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row py-1">

                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row py-1">

                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <button type="submit" class="btn btn-danger w-100"> Delete </button>

                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-warning w-50"> <i class="fas fa-arrow-left"></i></a>
                        </div>

                    </div>

                </div>

            </div>


            <!--Выводим img если редактируем!-->
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                <img src="@WebConst.ImagePath@Model.Image" class="w-100" style="border-radius:0px 15px; border:2px solid #00c9cf" />
                }

            </div>


        </div>
    </div>

</form>


<!--Валидация на стороне клиента-->
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />


        <script>
            //для использования редактора
            $(document).ready(function () {
                $('.summernote').summernote({
                    height: 250,
                    disabled: true
                });
            });
        </script>
    }

}



