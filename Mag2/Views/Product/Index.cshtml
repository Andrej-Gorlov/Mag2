
@model IEnumerable<Mag2.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Product List </h2>
        </div>
        <div class="col-6 text-right">
            <!--переход на страницу через (IActionResult Creat() из CategoryController)-->
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <!--отображение таблицы (Category)-->
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.Price</td>
                        <td>
                            <!--кнопки (редактирования/удаления)-->

                            <div class="w-100 btn-group" role="group">

                                <a asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-success mx-2"> <i class="fas fa-pen"></i></a><!--индификатор перехода по Id-->

                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger"> <i class="fas fa-trash"></i></a>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Product exists. :(</p>
    }


</div>

